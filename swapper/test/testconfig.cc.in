#include "testconfig.h"
#include <stmm-games/util/util.h>

namespace stmg
{

namespace testing
{

namespace config
{

const std::string& getTestBinaryDir() noexcept
{
	static std::string s_sTestBinaryDir = "@STMMI_TESTING_BINARY_DIR@";
	return s_sTestBinaryDir;
}

std::vector<std::string> getTestGamesFilePaths() noexcept
{
	static std::string s_sFilePaths = "@STMMI_TESTING_GAME_FILES_PATHS@";
	std::vector<std::string> aLines;
	Util::strTextToLines(s_sFilePaths, aLines);
	return aLines;
}
std::vector<std::string> getTestThemesFilePaths() noexcept
{
	static std::string s_sFilePaths = "@STMMI_TESTING_THEME_FILES_PATHS@";
	std::vector<std::string> aLines;
	Util::strTextToLines(s_sFilePaths, aLines);
	return aLines;
}

} // namespace config

} // namespace testing

} // namespace stmg

